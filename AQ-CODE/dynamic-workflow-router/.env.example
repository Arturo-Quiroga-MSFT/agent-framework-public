# Dynamic Workflow Router - Environment Configuration

# ==============================================================================
# Azure AI Foundry (Required)
# ==============================================================================

# Get from Azure AI Foundry portal
PROJECT_CONNECTION_STRING=your-project-connection-string-here

# Azure OpenAI model deployment name
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o


# ==============================================================================
# Azure Cosmos DB (Required)
# ==============================================================================

# Cosmos DB endpoint
COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/

# Cosmos DB access key
COSMOS_DB_KEY=your-cosmos-db-key-here

# Database and container names
COSMOS_DB_DATABASE=workflows
COSMOS_DB_CONTAINER=workflow_definitions


# ==============================================================================
# Router Configuration (Optional)
# ==============================================================================

# Enable workflow caching
ENABLE_WORKFLOW_CACHE=true

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL_SECONDS=300

# Fallback workflow when no match found
FALLBACK_WORKFLOW_ID=general_assistant_workflow


# ==============================================================================
# Observability (Optional)
# ==============================================================================

# Application Insights connection string
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Enable observability tracking
ENABLE_OBSERVABILITY=true


# ==============================================================================
# Authentication
# ==============================================================================

# Azure authentication is handled by DefaultAzureCredential
# Ensure you're authenticated via one of:
# - az login (Azure CLI)
# - Visual Studio
# - Environment variables:
#   AZURE_CLIENT_ID=your-client-id
#   AZURE_CLIENT_SECRET=your-client-secret
#   AZURE_TENANT_ID=your-tenant-id


# ==============================================================================
# Development/Debug (Optional)
# ==============================================================================

# Enable debug logging
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
