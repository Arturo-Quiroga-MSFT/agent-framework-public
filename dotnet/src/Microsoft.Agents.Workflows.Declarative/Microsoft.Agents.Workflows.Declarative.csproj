<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(ProjectsTargetFrameworks)</TargetFrameworks>
    <TargetFrameworks Condition="'$(Configuration)' == 'Debug'">$(ProjectsDebugTargetFrameworks)</TargetFrameworks>
    <VersionSuffix>alpha</VersionSuffix>
    <NoWarn>$(NoWarn);IL2075</NoWarn><!-- // %%% PRAGMA -->
  </PropertyGroup>

  <PropertyGroup>
    <InjectSharedThrow>true</InjectSharedThrow>
    <InjectIsExternalInitOnLegacy>true</InjectIsExternalInitOnLegacy>
    <InjectTrimAttributesOnLegacy>true</InjectTrimAttributesOnLegacy>    
  </PropertyGroup>

  <Import Project="$(RepoRoot)/dotnet/nuget/nuget-package.props" />

  <PropertyGroup>
    <!-- NuGet Package Settings -->
    <Title>Microsoft Agent Workflow Framework</Title>
    <Description>Contains the Microsoft Agent Declarative Workflow Framework.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.AI.Agents.Persistent" />
    <PackageReference Include="Azure.Identity" />
    <PackageReference Include="Microsoft.Bot.ObjectModel" />
    <PackageReference Include="Microsoft.Bot.ObjectModel.Json" />
    <PackageReference Include="Microsoft.Bot.ObjectModel.PowerFx" />
    <PackageReference Include="Microsoft.PowerFx.Interpreter" />
    <PackageReference Include="System.CodeDom" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.Agents.Workflows\Microsoft.Agents.Workflows.csproj" />
    <ProjectReference Include="..\Microsoft.Extensions.AI.Agents.AzureAI\Microsoft.Extensions.AI.Agents.AzureAI.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup>
    <None Update="CodeGen\*Template.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>%(Filename).cs</LastGenOutput>
    </None>
    <Compile Update="CodeGen\*Template.cs">
      <DependentUpon>%(Filename).tt</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Microsoft.Agents.Workflows.Declarative.UnitTests" />
  </ItemGroup>

  <ItemGroup>
    <None Update="CodeGen\EdgeTemplate.tt">
      <LastGenOutput>EdgeTemplate.cs</LastGenOutput>
    </None>
    <None Update="CodeGen\EmptyTemplate.tt">
      <LastGenOutput>EmptyTemplate.cs</LastGenOutput>
    </None>
    <None Update="CodeGen\InstanceTemplate.tt">
      <LastGenOutput>InstanceTemplate.cs</LastGenOutput>
    </None>
    <None Update="CodeGen\ResetVariableTemplate.tt">
      <LastGenOutput>ResetVariableTemplate.cs</LastGenOutput>
    </None>
    <None Update="CodeGen\SendActivityTemplate.tt">
      <LastGenOutput>SendActivityTemplate.cs</LastGenOutput>
    </None>
    <None Update="CodeGen\SetVariableTemplate.tt">
      <LastGenOutput>SetVariableTemplate.cs</LastGenOutput>
    </None>
    <None Update="CodeGen\WorkflowTemplate.tt">
      <LastGenOutput>WorkflowTemplate.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>