# Azure AI Agent Service Configuration
AZURE_AI_PROJECT_CONNECTION_STRING=<your-azure-ai-project-connection-string>

# Optional: Azure OpenAI (if not using Azure AI Agent Service default)
AZURE_OPENAI_ENDPOINT=<your-endpoint>
AZURE_OPENAI_API_KEY=<your-key>
AZURE_OPENAI_DEPLOYMENT_NAME=<your-deployment>

# Optional: OpenAI (alternative LLM)
OPENAI_API_KEY=<your-openai-key>

# MCP Server Configuration
# The MSSQL MCP server uses VS Code SQL extension for connection management
# No separate connection strings needed - managed through VS Code

# Logging and Observability
LOG_LEVEL=INFO
ENABLE_TRACING=true

# Safety Settings
REQUIRE_APPROVAL_FOR_WRITES=true
DRY_RUN_MODE=false
