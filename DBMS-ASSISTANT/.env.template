# RDBMS Assistant Environment Configuration Template
# Copy this file to .env and fill in your values

# ==== AZURE AI AGENT SERVICE ====
AZURE_AI_PROJECT_ENDPOINT=<your-azure-ai-project-endpoint>
# Example: https://your-project.services.ai.azure.com/api/projects/yourProject

AZURE_OPENAI_ENDPOINT=<your-openai-endpoint>
# Example: https://your-resource.openai.azure.com/

AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4.1
# Options: gpt-4.1 (recommended), gpt-4.1-mini (development)

# ==== DATABASE CONNECTION ====
SERVER_NAME=<your-server>.database.windows.net
DATABASE_NAME=<your-database>
# For SQL Auth, uncomment:
# SQL_USERNAME=<username>
# SQL_PASSWORD=<password>
# For Entra ID auth, run: az login

TRUST_SERVER_CERTIFICATE=true
READONLY=false

# ==== TRACING / OBSERVABILITY ====
# Full observability with OpenTelemetry and Application Insights
#
# TRACING OPTIONS (choose one or more):
# 1. Application Insights - Production monitoring (recommended)
# 2. Azure AI Tracing - Use AI Project's attached Application Insights
# 3. OTLP Endpoint - For Jaeger, Zipkin, or other OTLP collectors
# 4. DevUI Tracing - View traces in agent-framework DevUI
# 5. Console Tracing - Simple output for debugging

# Enable/disable OpenTelemetry
ENABLE_OTEL=true
ENABLE_SENSITIVE_DATA=true

# Option 1: Application Insights connection string (direct)
# APPLICATIONINSIGHTS_CONNECTION_STRING=<your-connection-string>

# Option 2: Azure AI Tracing (retrieves App Insights from AI Project)
ENABLE_AZURE_AI_TRACING=false

# Option 3: OTLP Endpoint (Jaeger, Zipkin, etc.)
# OTLP_ENDPOINT=http://localhost:4317

# Option 4: DevUI Tracing
ENABLE_DEVUI_TRACING=true

# Option 5: Console Tracing
# ENABLE_CONSOLE_TRACING=true

# ==== LOGGING ====
LOG_LEVEL=INFO

# ==== SAFETY SETTINGS ====
REQUIRE_APPROVAL_FOR_WRITES=true
DRY_RUN_MODE=false
