# Microsoft Entra Agent ID - Configuration Template
# Copy this file to .env and fill in your values

# Azure Tenant Information
TENANT_ID=your-tenant-id-here

# Agent Identity (Service Principal)
AGENT_CLIENT_ID=your-agent-client-id-here
AGENT_CLIENT_SECRET=your-agent-client-secret-here

# Azure Resources (for testing)
STORAGE_ACCOUNT_NAME=yourstorageaccount
STORAGE_CONTAINER_NAME=test-container

# Optional: Azure Key Vault (for secure credential storage)
KEY_VAULT_NAME=your-keyvault-name

# Optional: Logging
LOG_LEVEL=INFO
LOG_FILE=agent_auth.log
